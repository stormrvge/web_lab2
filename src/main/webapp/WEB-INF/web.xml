<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Test</display-name>

    <servlet>
        <servlet-name>indexPageController</servlet-name>
        <servlet-class>servlets.IndexPageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>indexPageController</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mainPageTableServlet</servlet-name>
        <servlet-class>servlets.MainPageTableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mainPageTableServlet</servlet-name>
        <url-pattern>/mainTable</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tablePageController</servlet-name>
        <servlet-class>servlets.TablePageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tablePageController</servlet-name>
        <url-pattern>/table</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tablePageServlet</servlet-name>
        <servlet-class>servlets.TablePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tablePageServlet</servlet-name>
        <url-pattern>/tableServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>imageServlet</servlet-name>
        <servlet-class>servlets.ImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>imageServlet</servlet-name>
        <url-pattern>/imageServlet</url-pattern>
    </servlet-mapping>

</web-app>